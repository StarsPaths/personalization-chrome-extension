{
  "manifest_version": 2,
  "name": "APZ Extension proxy tool",
  "description": "进行 Storefont 多环境管理",
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": { "scripts": ["background.bundle.js"] },
  "browser_action": {
    "default_popup": "popup.html", 
    "default_icon": "icon-34.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3343/*",
        "https://personalization.automizely.io/*",
        "https://personalization.automizely.com/*",
        "http://localhost:8000/*",
        "https://admin.automizely.me/*",
        "https://admin.automizely.org/*"
      ],
      "js": ["contentScript.bundle.js"]
    }
  ],

  "icons": {
    "128": "icon-128.png"
  },

  "devtools_page": "devtools.html"
}
